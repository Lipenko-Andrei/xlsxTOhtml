<Window x:Class="XLSXtoHTML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XLSXtoHTML"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400" MinHeight="200" MinWidth="400">
    <Grid>
        <Button Name="LoadButton" Click="LoadButton_Click" Content="Загрузка" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="50" Width="100"/>
        <Button Name="SaveButton" Click="SaveButton_Click" Content="Сохранение" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" Height="50" Width="100"/>
        <TextBlock Name="FilePath" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0" Text="Выбран файл: " TextWrapping="Wrap"/>
    </Grid>
</Window>
